  <body>
    <nav>

  <div class="container-fluid">
     <div class="row nav-cus ">
<div class="col-md-6 p-4">blog-application

</div>

<div class="col-md-6">
  <div class= "row ">
<div class="col-md-6 p-4">
 <% if @current_user %>
 Logged in as <%= @current_user.admin? ? ' (Admin)' : '' %><%= @current_user.name %>
  <%= turbo_frame_tag 'logout-link' do %>
  </div>
  <div class="col-md-6 mt-2">
    <%= form_with(url: logout_path, method: :delete, class: 'btn logout-btn') do |form| %>
  <%= form.submit 'Logout' %>
<% end %>

  <% end %>
<% else %>
</div>
  <%= link_to 'Login', login_path %>
<% end %>
</div>
 </div>
</nav>
    <div id="flash-messages">
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>
</div>
</div>

    <%= yield %>
  </body>
</html>
